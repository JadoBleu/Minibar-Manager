<ListItemWithCheckbox>:
    RightCheckbox:
        on_state:self.toggle_check(root.secondary_text)

<MDCheckbox>:
    selected_color: (.86,.24,.24)
    
<StartScreen>:
    name: 'start'
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Minibar Manager"
            halign: "center"
            font_style: "H2"
            theme_text_color: "Primary"
            size_hint: (1, .5)
    MDFillRoundFlatButton:
        text: 'Start'
        pos_hint: {'center_x':0.5,'center_y':0.3}
        on_release: 
            root.setup()
            root.manager.transition.direction = 'left'
            root.manager.current = 'm_menu'

<MainMenu>:
    name: 'm_menu'
    MDFillRoundFlatButton:
        text: 'Recipes'
        font_size: "22sp"
        size_hint: .6, .2
        pos_hint: {'center_x':0.5,'center_y':0.75}
        on_release: 
            root.manager.transition.direction = 'left'
            root.manager.current = 'r_list'
    MDFillRoundFlatButton:
        text: 'Inventory'
        font_size: "22sp"
        size_hint: .6, .2
        pos_hint: {'center_x':0.5,'center_y':0.35}
        on_release: 
            root.manager.transition.direction = 'left'
            root.manager.current = 'i_list'
    MDFillRoundFlatIconButton:
        text: 'Exit'
        size_hint: (0.9, .075)
        pos_hint: {"center_x":.5, "center_y":.05}
        icon: "keyboard-backspace"
        halign: "center"
        on_release: exit()



<RecipeList>:
    name: 'r_list'
    on_enter: self.get_r_list()
    BoxLayout:
        size_hint: .9, .9
        ScrollView:
            MDList:
                id: r_scroll
    MDFillRoundFlatIconButton:
        text: 'Back'
        size_hint: (0.9, .075)
        pos_hint: {"center_x":0.5, "center_y":.05}
        icon: "keyboard-backspace"
        halign: "center"
        on_release: 
            root.manager.transition.direction = 'right'
            root.manager.current = 'm_menu'


<IngredientList>:
    name: 'i_list'
    on_enter: self.get_i_list()
    BoxLayout:
        size_hint: .9, .9
        ScrollView:
            MDList:
                id: i_scroll
    MDFillRoundFlatIconButton:
        text: 'Back'
        size_hint: (0.9, .075)
        pos_hint: {"center_x":0.5, "center_y":.05}
        icon: "keyboard-backspace"
        halign: "center"
        on_release: 
            root.manager.transition.direction = 'right'
            root.manager.current = 'm_menu'


<RecipeDisplay>:
    name: 'r_disp'
    on_enter: root.get_data()
    MDLabel:
        text: root.recipe_name
        halign: "center"
        font_style: "H3"
        theme_text_color: "Primary"
        size_hint: (1, .5)
    MDFillRoundFlatIconButton:
        text: 'Back'
        size_hint: (0.9, .075)
        pos_hint: {"center_x":0.5, "center_y":.05}
        icon: "keyboard-backspace"
        halign: "center"
        on_release: 
            root.manager.transition.direction = 'right'
            root.manager.current = 'r_list'

